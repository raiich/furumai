{
  "name": "furumai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:web": "webpack --mode=production --node-env=production",
    "build:cli": "webpack --mode=production --node-env=production --env=node",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "build:all": "npm run dependencies:all && npm run build:prod && mv ./dist docs/docs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack --watch",
    "tsc": "tsc",
    "tslint": "tslint --fix **/*.ts",
    "license-checker": "license-checker --production --json --relativeLicensePath --excludePrivatePackages",
    "dependencies": "npm run -s license-checker | jq 'del(.[]|.path)' > ./dist/dependencies.json",
    "copyLicenses": "npm run -s license-checker | jq -r '.[].licenseFile' | xargs -I{} sh -c 'mkdir -p ./dist/public/$(dirname {}) && cp {} ./dist/public/{}'",
    "dependencies:all": "npm run dependencies && npm run copyLicenses",
    "txt2svg:all": "bash ./tasks/txt2svg-all.sh",
    "antlr4": "java -jar antlr-4.13.1-complete.jar -Dlanguage=TypeScript -o src/generated/antlr4ts/ -visitor Furumai.g4"
  },
  "deprecated": {
    "snippets": "tsc --outDir ./dist/ && node dist/tools/tools.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-regular-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "antlr4": "^4.13.1-patch-1",
    "chota": "^0.9.2",
    "lz-string": "^1.4.4",
    "roughjs": "^4.6.6",
    "tslib": "^2.6.2",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/webpack-env": "^1.18.4",
    "css-loader": "^7.1.1",
    "html-webpack-plugin": "^5.5.4",
    "license-checker": "^25.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
