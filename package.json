{
  "name": "furumai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:web": "webpack --mode=production --node-env=production",
    "build:cli": "webpack --mode=production --node-env=production --env=node",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack --watch",
    "tsc": "tsc",
    "tslint": "tslint --fix **/*.ts",
    "license-checker": "license-checker --production --json --relativeLicensePath --excludePrivatePackages",
    "txt2svg:all": "bash ./tasks/txt2svg-all.sh",
    "antlr4": "java -jar antlr-4.13.1-complete.jar -Dlanguage=TypeScript -o src/generated/antlr4ts/ -visitor Furumai.g4"
  },
  "deprecated": {
    "snippets": "tsc --outDir ./dist/ && node dist/tools/tools.js",
    "dependencies": "yarn -s license-checker | jq 'del(.[]|.path)' > ./.vuepress/components/dependencies.json",
    "copyLicenses": "yarn -s license-checker | jq -r '.[].licenseFile' | xargs -I{} sh -c 'mkdir -p ./.vuepress/public/$(dirname {}) && cp {} ./.vuepress/public/{}'",
    "dependencies:all": "yarn dependencies && yarn copyLicenses",
    "build:all": "yarn dependencies:all && yarn build && yarn build:docs && mv .vuepress/dist docs/docs"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "chota": "^0.9.2",
    "jsdom": "^22.1.0",
    "lz-string": "^1.4.4",
    "roughjs": "^3.1.0",
    "tslib": "^2.6.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.6.2",
    "@types/webpack-env": "^1.18.4",
    "antlr4": "^4.13.1-patch-1",
    "css-loader": "^6.10.0",
    "html-webpack-plugin": "^5.5.4",
    "license-checker": "^25.0.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-env": "^0.8.0"
  }
}
